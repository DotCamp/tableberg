<?xml version="1.0" encoding="UTF-8"?>
<!--
    PHPUnit configuration file for the Tableberg project.
    This file defines the test suites and environment variables for running integration tests.
-->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="__tests__/php/includes/integration/bootstrap.php"
>
    <testsuites>
        <testsuite name="tableberg">
            <directory>__tests__/php/integration/tableberg</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="PHPUNIT_TABLEBERG_AUTOLOAD" value="packages/tableberg/vendor/autoload.php"/>
        <env name="PHPUNIT_TABLEBERG_PRO_AUTOLOAD" value="packages/pro/vendor/autoload.php"/>
        <!-- Force the integration setup to run.
        Normally the integration setup is only run once when tests initiated for the first time, but if you need to force it to run again, set this to true.
         -->
        <env name="FORCE_INTEGRATION_SETUP" value="false"/>
        <server name="DB_NAME" value="tableberg_integration_db"/>
        <server name="DB_USER" value="root"/>
        <server name="DB_PASS" value=""/>
        <server name="DB_HOST" value="localhost"/>
    </php>
</phpunit>
