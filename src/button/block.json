{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "version": "0.1.0",
    "title": "Button",
    "name": "tableberg/button",
    "parent": ["tableberg/cell"],
    "category": "design",
    "icon": "button",
    "description": "Tableberg Button: Add a button to your tableberg table",
    "attributes": {
        "text": {
            "type": "string"
        },
        "width": {
            "type": "number"
        },
        "backgroundColor": {
            "type": "string"
        },
        "backgroundGradient": {
            "type": "string"
        },
        "textColor": {
            "type": "string"
        },
        "backgroundHoverGradient": {
            "type": "string"
        },
        "backgroundHoverColor": {
            "type": "string"
        },
        "textHoverColor": {
            "type": "string"
        },
        "textAlign": {
            "type": "string"
        },
        "id": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "linkTarget": {
            "type": "string"
        },
        "rel": {
            "type": "string"
        }
    },
    "supports": {
        "html": false,
        "typography": {
            "fontSize": true
        },
        "__experimentalBorder": {
            "radius": true
        }
    },
    "textdomain": "tableberg",
    "editorScript": "tableberg-script",
    "editorStyle": "tableberg-editor-style",
    "style": "tableberg-style"
}
