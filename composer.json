{
  "name": "dotcamp/tableberg-monorepo",
  "description": "Tableberg monorepo by Dotcamp.",
  "type": "project",
  "license": "MIT",
  "scripts": {
    "test": [
      "@test:unit",
      "@test:integration"
    ],
    "test:unit": "@test:unit:tableberg",
    "test:integration": "@test:integration:tableberg",
    "test:unit:tableberg": "phpunit --config php_unit_tests.xml --testsuite=tableberg",
    "test:integration:tableberg": "phpunit --config php_integration_tests.xml --testsuite=tableberg"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "koodimonni/composer-dropin-installer": true,
      "mnsami/composer-custom-directory-installer": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4",
    "koodimonni/composer-dropin-installer": "^1.4",
    "wordpress/wordpress": "^6.7",
    "mnsami/composer-custom-directory-installer": "^2.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/WordPress/wordpress-develop"
    }
  ],
  "extra": {
    "installer-paths": {
      "./__tests__/php/includes/integration/wp/": [
        "wordpress/wordpress"
      ]
    }
  }
}
